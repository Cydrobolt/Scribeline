extends layout

block content
    div(class="pull-right")
        a(href="/logout")
            | Log Out

    div(style="text-align:center")
        a(href="/")
            img(src='/images/scribeline.png')
        br
        br
        a(class='btn btn-success', href="#", onclick="saveArea();", id="save")
            i(class="fa fa-book")
                |     Save
        &nbsp; &nbsp; &nbsp;
        a(class='btn btn-danger', href="#", onclick="newArea();")
            i(class="fa fa-file-text")
            |     New
        &nbsp; &nbsp; &nbsp;
        a(class='btn btn-warning', id="open", href="#", onclick="openDocModal();")
            i(class="fa fa-file-text")
            |     Open
        &nbsp; &nbsp; &nbsp;
        a(class='btn btn-info', href="#", id="help", onclick="triggerAlert();")
            i(class="fa fa-question-circle")
            |     Help
        div(style="padding-top:20px;padding-bottom:10px;width:40%;margin:0 auto; width: 50%%;", id="stA")
        br
        div(style='margin:0 auto; width: 70%; padding-top:50px')
            input(type="text", id="dtitle", class="form-control", style="width:460px", onkeyup="updateInDocTitle();", placeholder="Outline Title")
            br
            div(style="width:100%;height:450px;text-align:left", name="area", id="area", contenteditable="true", TabIndex = "-1", class="form-control")
                | <div id="idtitle"></div>
                | <div id="iddate"></div>
                | <div id="HoC">Start typing here...</div>
    script(src="/javascript/jquery.blockUI.js")
    script(src="/javascript/guid.js")
    script(src="/javascript/cursorctl.js")
    script(src="/javascript/notes.js")
    script(src="/javascript/alert.js")
    script(src="/javascript/shortcut.js")
    script(src="/javascript/ckeditor.min.js")

    script
        | shortcut.add("Ctrl+Y",function() {
        |   addLevel();
        | });
        | shortcut.add("Ctrl+O",function() {
        |   openDocModal();
        | });
        | shortcut.add("Ctrl+Alt+E",function() {
        |   shortenField();
        | });
        | shortcut.add("Enter",function() {
        | 	chkMain();
        | });
        | shortcut.add("Ctrl+U",function() {
        | 	delLevel();
        | });
        | shortcut.add("Ctrl+S",function() {
        | 	saveArea();
        | });
