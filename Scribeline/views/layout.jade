doctype html
html
	head
		title Scribeline
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", rel="stylesheet")
		link(rel='stylesheet', href='//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css')
		link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/cosmo/bootstrap.min.css", rel="stylesheet")
	body
		block content
		script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js")
		script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
		if (!hide_footer)
			div(class='col-md-12')
				footer(style="padding-top:150px")
					span(class='pull-left')
						a(href="//github.com/cydrobolt/scribeline") Github
						| &nbsp;|&nbsp;
						a(href="/legal") Legal
						| &nbsp;|&nbsp;
						a(href="/about", style="display:inline") About
					span(class="pull-right", style="display:inline")
						| Copyright 2014 Chaoyi Zha

		if flash
			script(src="/javascript/jquery.floatingmessage.min.js")
			script
				| // Get flashed messages
				| $( document ).ready(function() {
				| 	$.floatingMessage("<b>#{flash}</b>",{
				| 		time:3000,
				| 		position : "top-right",
				| 		show : "fold",
				| 		hide : "explode",
				| 		stuffEaseTime : 500,
				| 		stuffEasing : "swing",
				| 		moveEaseTime : 200,
				| 		moveEasing   : "easeInExpo"
				| 	});
				| });
