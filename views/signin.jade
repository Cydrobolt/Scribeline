extends layout

block content
	div(style="text-align:center")
		a(href="/")
			img(src='/images/scribeline.png')
		br
		br
		h3 Sign In
		br
		br
		div(class="col-md-4")
		div(class="col-md-4")

			form(action="/plogin", method="POST")
				input(type='text', name='username', placeholder='username', id='username', class='form-control')
				br
				input(type='password', name='password', placeholder='password', id='password', class='form-control')
				br
				br
				input(type='submit', id='submit', style="width:80%", class='btn btn-primary', value="Sign In")
		div(class="col-md-4")
